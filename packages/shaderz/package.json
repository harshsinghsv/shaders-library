{
  "name": "shaderz",
  "version": "1.0.0",
  "description": "CLI tool to add beautiful WebGL shaders to your React/Next.js project",
  "main": "dist/index.js",
  "bin": {
    "shaderz": "dist/cli.js"
  },
  "files": [
    "dist",
    "shaders",
    "videos"
  ],
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format cjs --dts --shims",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "shaderz",
    "shader",
    "webgl",
    "cli",
    "components",
    "react",
    "nextjs"
  ],
  "author": "harsh and shubham",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "prompts": "^2.4.2",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harsh-and-shubham/shaderz"
  },
  "bugs": {
    "url": "https://github.com/harsh-and-shubham/shaderz/issues"
  },
  "homepage": "https://shaderz.vercel.app"
}
